                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_edittext_single_bg"
                android:gravity="left"
                android:hint="请填写输、泄水洞（管）损坏或异常情况"
